{
    "manifest_version": 2,
    "name": "Portal Beautifier",
    "version": "1.1.0",
    "description": "Overrides button styles and colors on the AIMS student portal.",
    "icons": {
        "48": "icon-48.png"
    },

    "content_scripts": [
        {
            "matches": ["https://cituweb.pinnacle.com.ph/aims/students/*"],
            "css": ["content.css"],
            "js": ["content.js"]
        }
    ],

    "permissions": ["activeTab"]
}
